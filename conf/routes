# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /search                     controllers.SearchController.search(query: Option[String], field: Seq[String], minTermVectorFreq:Int ?= -1, explain:Option[String], minTermFreq: Int ?= 1)
GET     /jsearch                    controllers.SearchController.jsearch(query: Option[String], field: Seq[String], limit:Int ?= 10, minTermFreq: Int ?= 1, pretty: Option[String])
GET		/terms						controllers.SearchController.terms(query: String, level: String ?= "document", maxDistance:Int ?= 2, minCommonPrefix:Int ?= 0, transposeIsSingleEdit:Boolean ?= false)
GET		/stats						controllers.SearchController.stats(query: String)
GET		/collocations				controllers.SearchController.collocations(term: Seq[String], limitQuery: Option[String], level: String ?= "paragraph", scaling: String ?= "min", minTotalFreq: Int ?= 2, minFreqInDoc: Int ?= 1, minTermLength: Int ?= 4, limit: Int ?= 20, pretty: Option[String])
GET		/cdiff						controllers.SearchController.cdiff(term1: Seq[String], limitQuery1: Option[String], term2: Seq[String], limitQuery2: Option[String], attr: Option[String], level: String ?= "paragraph", scaling: String ?= "min", minTotalFreq: Int ?= 2, minFreqInDoc: Int ?= 1, minTermLength: Int ?= 4, pretty: Option[String])
GET		/collocations2				controllers.SearchController.collocations2(term: Seq[String], limitQuery: Option[String], level: String ?= "paragraph", scaling: String ?= "min", minTotalFreq: Int ?= 2, minFreqInDoc: Int ?= 1, minTermLength: Int ?= 4, limit: Int ?= 20, pretty: Option[String])
GET		/dump						controllers.SearchController.dump