# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /:index/search           		controllers.SearchController.search(index)
GET     /search           				controllers.SearchController.search(index = "default")
POST    /:index/search           		controllers.SearchController.search(index)
POST	/search							controllers.SearchController.search(index = "default")

GET		/:index/terms					controllers.SimilarTermsController.similarTerms(index, term: String, maxEditDistance: Int ?= 2, minCommonPrefix: Int ?= 0, transposeIsSingleEdit: Option[String])
GET		/terms							controllers.SimilarTermsController.similarTerms(index = "default", term: String, maxEditDistance: Int ?= 2, minCommonPrefix: Int ?= 0, transposeIsSingleEdit: Option[String])

GET		/:index/stats					controllers.StatsController.stats(index, from: Double ?= 0.0, to: Double ?= 1.0, by: Double ?= 0.1)
GET		/stats							controllers.StatsController.stats(index = "default", from: Double ?= 0.0, to: Double ?= 1.0, by: Double ?= 0.1)

GET		/:index/termStats				controllers.TermStatsController.stats(index)
GET		/termStats						controllers.TermStatsController.stats(index = "default")
POST	/:index/termStats				controllers.TermStatsController.stats(index)
POST	/termStats						controllers.TermStatsController.stats(index = "default")

GET		/:index/collocations			controllers.CollocationsController.collocations(index)
GET		/collocations					controllers.CollocationsController.collocations(index = "default")
POST	/:index/collocations			controllers.CollocationsController.collocations(index)
POST	/collocations					controllers.CollocationsController.collocations(index = "default")

GET		/:index/termVectorDiff			controllers.TermVectorDiffController.termVectorDiff(index)
GET		/termVectorDiff					controllers.TermVectorDiffController.termVectorDiff(index = "default")
POST	/:index/termVectorDiff			controllers.TermVectorDiffController.termVectorDiff(index)
POST	/termVectorDiff					controllers.TermVectorDiffController.termVectorDiff(index = "default")

GET		/:index/similarCollocations		controllers.SimilarCollocationsController.similarCollocations(index)
GET		/similarCollocations			controllers.SimilarCollocationsController.similarCollocations(index = "default")
POST	/:index/similarCollocations		controllers.SimilarCollocationsController.similarCollocations(index)
POST	/similarCollocations			controllers.SimilarCollocationsController.similarCollocations(index = " default")

GET		/:index/dump					controllers.DumpController.dump(index)
GET		/dump							controllers.DumpController.dump(index = "default")